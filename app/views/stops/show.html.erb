<% if flash[:duplicate_id] %>
  <p class="alert alert-danger">Stop with that ID already exists!</p>
<% end %>
<% logger.info { "flash: " + flash.inspect } %>
<p>
  <strong>Stop ID:</strong>
  <%= @stop.stop_id %>
</p>

<p>
    <strong>Stop Name:</strong>
    <%= @stop.stop_name %>
</p>
 
<p>
  <strong>Times:</strong>
  <% if !@stop.bus_times.blank? %>
    <% for bus_time in @stop.bus_times %>
      <p>Time: <% bus_time.departure_time %></p>
    <% end %>
  <% else %>
    
  <% end %>
</p>

<% unless @stop.times_json.include? "AccessDenied" %>
  <pre><%= JSON.pretty_generate(JSON.parse(@stop.times_json))  %></pre>
<% end %>

<%= link_to 'Back', stops_path %>