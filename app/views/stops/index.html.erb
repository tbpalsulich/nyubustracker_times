<h1>List of all stops</h1>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<table>
  <tr>
    <th>Stop ID</th>
    <th>Times</th>
    <th colspan="3"></th>
  </tr>
 
<% @stops.each do |stop| %>
  <tr>
    <td><%= stop.stop_id %></td>
    <td><%= stop.bus_times.size %></td>
    <td><%= link_to 'Show', stop_path(stop) %></td>
    <td><%= link_to 'Edit', edit_stop_path(stop) %></td>
    <td><%= link_to 'Destroy', stop_path(stop),
      method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New Stop', new_stop_path %>