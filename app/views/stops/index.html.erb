<center><h1>NYU Bus Stops</h1></center>
<hr/>
<div class="col-md-1"></div>
<div class="col-md-5">
  <table class="table table-striped table-bordered table-condensed">
    <tr>
      <th>Stop Name</th>
      <th>Stop ID</th>
    </tr>
 
    <% @stops.each_with_index do |stop, i| %>
      <tr>
        <td><%= link_to stop.stop_name, stop_path(stop.stop_id), remote: true, :class => "stop_link", :id => i %></td>
        <td><%= stop.stop_id %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'New Stop', new_stop_path %>
</div>
<div class="col-md-5">
  <div id="times" data-spy="affix" data-offset-top="40">
    <div><strong>Stop Name: </strong><span id="stop_name"></span></div>
    <div><strong>Stop ID: </strong><span id="stop_id"></span></div>
    <div id="jsoneditor" style="width: 500px; height: 500px;"></div>
  </div>
</div>
<div class="col-md-1"></div>