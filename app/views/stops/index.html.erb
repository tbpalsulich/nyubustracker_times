<h1>List of all stops</h1>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Stop Name</th>
    <th>Stop ID</th>
    <th colspan="3">Options</th>
  </tr>
 
<% @stops.each do |stop| %>
  <tr>
    <td><%= stop.stop_name %></td>
    <td><%= stop.stop_id %></td>
    <td><%= link_to 'Show', stop_path(stop.stop_id) %></td>
    <td><%= link_to 'Edit', edit_stop_path(stop.stop_id) %></td>
    <td><%= link_to 'Destroy', stop_path(stop.stop_id),
      method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New Stop', new_stop_path %>