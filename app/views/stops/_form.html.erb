<%= form_for @stop.nil? ? :stop : @stop do |f| %>
  <p>
    <%= f.label :stop_id %><br>
    <%= f.number_field :stop_id %>
  </p>

  <p>
    <%= f.label :stop_name %><br>
    <%= f.text_field :stop_name %>
  </p>

  <p>
    <%= f.label :times %><br>
    <%= f.text_area :times %><br>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', stops_path %>