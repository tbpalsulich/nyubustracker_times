<%= form_for @stop.nil? ? :stop : @stop, :html => {:onsubmit => 'submit;'} do |f| %>
  <p>
    <%= f.label :stop_id %><br>
    <%= f.number_field :stop_id %>
  </p>

  <p>
    <%= f.label :stop_name %><br>
    <%= f.text_field :stop_name %>
  </p>

  <div id="jsoneditor" style="width: 500px; height: 500px;"></div>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', stops_path %>